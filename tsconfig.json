	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"incremental": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": [
		"src"
	]
}
